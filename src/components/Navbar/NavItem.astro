---
const { title, isFullWidth } = Astro.props;
---

<div class={`cursor-pointer ${isFullWidth ? "static" : "relative"} group/item`}>
  <div class="relative w-full h-full flex justify-center items-center">
    <span class="inline-block">{title}</span>
    <div
      class="absolute bottom-0 left-0 bg-primary h-[2px] w-0 group-hover/item:w-full transition-all duration-500"
    >
    </div>
  </div>
  <div
    class="cursor-default w-full absolute invisible opacity-0 group-hover/item:visible group-hover/item:opacity-100 transition-opacity duration-500 top-[70px] left-0"
  >
    <slot />
  </div>
</div>
